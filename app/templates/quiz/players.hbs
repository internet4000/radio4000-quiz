{{#unless model.players}}
  <p>Add at least one player:</p>
{{/unless}}

{{add-player
  numberOfPlayers=model.players.length
  onSubmit=(route-action 'addPlayer')
}}

{{#if model.players}}
  <ol>
    {{#each model.players as |player index|}}
      <li>
        {{edit-player
          player=player
          removePlayer=(route-action 'removePlayer')
        }}
      </li>
    {{/each}}
  </ol>

  <button onclick={{route-action "continue"}}>
    Start quiz!
  </button>
{{/if}}

{{outlet}}